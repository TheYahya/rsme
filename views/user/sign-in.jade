extends ../layout-free

block body
	body(style='background-image: url(/img/sign-in.jpg);').s-body
		.sign-up
			p.tac
				a(href='/')
					img(src='/img/logo.png', style='width:12em;') 
			if msgSuccess
				.alert.alert-success #{msgSuccess}
			if errors
				each error, i in errors
					.alert.alert-danger #{error.msg}
			form(action='/user/sign-in', method='POST', role='form')
				.form-group 
					input(type='email', id='email', name='email', placeholder='email', autofocus).form-control
				.form-group 
					input(type='password', id='password', name='password', placeholder='password').form-control 
				.form-group
					input(type='submit', value='Sign in').btn.btn-primary.form-control
			br 
			p.tac.offer
				a(href='/user/forgot-password') Forgot password? 
			p.tac.offer
				a(href='/user/sign-up') Don't Have an Account? Sign up.